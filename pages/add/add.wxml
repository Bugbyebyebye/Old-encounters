<view class="container">
    <view class="header">
        <view class="title">发布</view>
    </view>
    <t-tabs 
        class="bigger"
        defaultValue="{{0}}"
        value="{{active}}" 
        bind:change="onTabsChange" 
        bind:click="onTabsClick" 
        t-class="custom-tabs">
        <t-tab-panel label="发布旧物" value="0" style="{{tabPanelstyle}}">
            <good-form kindArr="{{kinds}}" userId="{{userId}}"></good-form>
        </t-tab-panel>
        <t-tab-panel label="发布信息" value="1" style="{{tabPanelstyle}}" disabled>
           <info-form userId="{{userId}}" location="{{location}}"></info-form>
        </t-tab-panel>
    </t-tabs>
</view>

<t-message id="t-message" />